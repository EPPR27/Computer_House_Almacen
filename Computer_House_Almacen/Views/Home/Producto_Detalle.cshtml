@model Computer_House_Almacen.Models.ViewModel.ProductoVM
@{
    ViewData["Title"] = "Producto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.oProducto.Idprod == 0)
{

    <h1>Crear Producto</h1>
}
else
{
    <h1>Editar Producto</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Producto_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oProducto.Idprod" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Nomprod">Nombre Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Nomprod" type="text" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="oProducto.Idmarca">Marca</label>
                <select class="form-select form-select-sm" asp-for="oProducto.Idmarca" asp-items="@Model.oListaMarca">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="oProducto.Idcate">Categoria</label>
                <select class="form-select form-select-sm" asp-for="oProducto.Idcate" asp-items="@Model.oListaCategoria">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Precio" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Stock">Stock</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Stock" type="number" id="stockInput" />
            </div>
            <div style="display:none" id="divAdicional">
                <div class="mb-2">
                    <label class="form-label" asp-for="oProducto.Estado">Estado</label>
                    <input class="form-control form-control-sm" asp-for="oProducto.Estado" type="text" />
                </div>
            </div>
            <div style="display:none" id="divCero">
                <div class="mb-2">
                    <label class="form-label" asp-for="oProducto.Estado">Estado</label>
                    <input class="form-control form-control-sm" asp-for="oProducto.Estado" type="text" />
                </div>
            </div>
            

            <div class="mb-2">

                @if (Model.oProducto.Idprod == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>

<script>
    $(document).ready(function () {
        $('#stockInput').on('input', function () {
            var valorIngresado = parseInt($(this).val());

            if (valorIngresado === 0 || valorIngresado === null) {
                $('#divAdicional').hide();
                $('#divCero').show();
            } else {

                $('#divAdicional').show();
                $('#divCero').hide();
            }
        });
    });
</script>

